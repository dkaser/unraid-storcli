<!--
The 'install' script.
-->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
upgradepkg --install-new /boot/config/plugins/unraid-storcli/unraid-storcli-0.0.1-noarch-1.txz

# cleanup old versions
rm -f $(ls /boot/config/plugins/unraid-storcli/unraid-storcli-*.txz 2>/dev/null | grep -v '0.0.1')

echo ""
echo "----------------------------------------------------"
echo " unraid-storcli has been installed."
echo " Version: 0.0.1"
echo "----------------------------------------------------"
echo ""
]]>
</INLINE>
</FILE>

<!--
The 'remove' script.
-->
<FILE Run="/bin/bash" Method="remove">
<INLINE>
<![CDATA[
removepkg unraid-storcli

rm -rf /usr/local/emhttp/plugins/unraid-storcli
rm -rf /boot/config/plugins/unraid-storcli
]]>
</INLINE>
</FILE>

